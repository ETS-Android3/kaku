<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kaku" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueDark</item>
        <item name="colorPrimaryVariant">@color/blueLight</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueGreenDark</item>
        <item name="colorSecondaryVariant">@color/blueGreen</item>
        <item name="colorOnSecondary">#232323</item>

        <item name="navbar_background">#232323</item>
        <item name="text_color">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="icon_home">@drawable/ic_home_dark</item>
        <item name="icon_list">@drawable/ic_list_dark</item>
        <item name="icon_quiz">@drawable/ic_test_dark</item>
        <item name="icon_hiragana">@drawable/ic_hiragana_dark</item>
        <item name="icon_delete">@drawable/ic_delete_dark</item>
        <item name="icon_draw">@drawable/ic_draw_dark</item>

        <item name="colorAccent">#ffffff</item>
    </style>
</resources>